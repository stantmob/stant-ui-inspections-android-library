<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handler"
            type="br.com.stant.libraries.uilibrary.components.severitylevelindicatorlateralsideview.SeverityLevelIndicatorLateralSideView" />
    </data>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/severity_level_indicator_lateral_side_view_first_bar_view"
            android:layout_width="5dp"
            android:layout_height="28dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_ralf_top_round_gray_bar"
            android:onClick="@{handler::setVeryLightSeverityLevelConfiguration}" />

        <View
            android:id="@+id/severity_level_indicator_lateral_side_view_second_bar_view"
            android:layout_width="5dp"
            android:layout_height="28dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_rectangular_gray_bar"
            android:onClick="@{handler::setLightSeverityLevelConfiguration}" />

        <View
            android:id="@+id/severity_level_indicator_lateral_side_view_third_bar_view"
            android:layout_width="5dp"
            android:layout_height="28dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_rectangular_gray_bar"
            android:onClick="@{handler::setNormalSeverityLevelConfiguration}" />

        <View
            android:id="@+id/severity_level_indicator_lateral_side_view_fourth_bar_view"
            android:layout_width="5dp"
            android:layout_height="28dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_rectangular_gray_bar"
            android:onClick="@{handler::setSeriousSeverityLevelConfiguration}" />

        <View
            android:id="@+id/severity_level_indicator_lateral_side_view_fifth_bar_view"
            android:layout_width="5dp"
            android:layout_height="28dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_ralf_bottom_round_gray_bar"
            android:onClick="@{handler::setGraveSeverityLevelConfiguration}" />

    </LinearLayout>

</layout>

