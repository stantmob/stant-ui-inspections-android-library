<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="InfoActionCardView">
        <attr name="infoText" format="string" />
        <attr name="actionName" format="string" />
    </declare-styleable>

    <declare-styleable name="SimpleInformationsCardView">
        <attr name="firstTitle" format="string" />
        <attr name="secondTitle" format="string" />
        <attr name="informationsColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ActionButtonView">
        <attr name="actionText" format="string" />
        <attr name="actionIcon" format="reference" />
        <attr name="cardStyle" format="enum">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>
    </declare-styleable>

</resources>