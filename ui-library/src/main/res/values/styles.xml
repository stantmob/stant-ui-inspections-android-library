<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- General Styles -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary" >@color/gray</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/orange_stant</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>

    <style name="Hover">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/orange_stant</item>
        <item name="actionMenuTextColor">@color/orange_stant</item>
        <item name="android:color">@color/orange_stant</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_left</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>


    <!-- Components Styles -->


    <style name="NumberPickerDialogTheme">
        <item name="android:background">@drawable/shape_rounded_white</item>
    </style>


</resources>